<ci:NotificationProviderControlBase
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:ci="http://classisland.tech/schemas/xaml/core"
  xmlns:putIsland="clr-namespace:PutIsland"
  xmlns:fa="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
  x:Class="PutIsland.NotificationSettings"
  x:TypeArguments="putIsland:NotificationSettingsModel">
  <ScrollViewer>
    <StackPanel>
      <fa:SettingsExpander
        IconSource="{ci:FluentIconSource &#xEAB0;}"
        Header="Token"
        Description="唯一标识符">
        <fa:SettingsExpander.Footer>
          <TextBox
            VerticalContentAlignment="Stretch"
            HorizontalContentAlignment="Left"
            Text="{Binding $parent[ci:NotificationProviderControlBase].Settings.Token}" />
        </fa:SettingsExpander.Footer>
      </fa:SettingsExpander>
    </StackPanel>
  </ScrollViewer>
</ci:NotificationProviderControlBase>